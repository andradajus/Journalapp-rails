<div class="bg-indigo-400 grid grid-cols-5 grid-rows-8 gap-3">
  <div class="col-span-5">
    <%= render partial: "shared/navbar" %>
  </div>

  <div class="bg-cyan-200 col-span-2 row-span-2 row-start-2">
    <div class="flex flex-col h-full justify-between">
      <div class="flex">
        <div class="flex flex-row">
          <span class="text-2xl">Hi, </span>
          <span class="text-2xl font-bold">Test User</span>
        </div>
      </div>
      
      <div >
        <span>Weather today</span>
      </div>

      <div>
        <span>Today is <%= @current_date.strftime('%B %e, %Y') %></span>
      </div>

      <div>
        <span class="text-4xl"> What would you like to do today?</span>
      </div>

      <div>
        <span class="italic">"<%= @random_quote %>"</span>
      </div>
    </div>
  </div>
  

  <div class="bg-yellow-200 col-span-3 row-span-2 col-start-3 row-start-2">
    <%= render 'tasks/form', task: Task.new %> 
  </div>

  <div class="bg-pink-200 col-span-3 row-span-5 row-start-4 h-full">
    <%= render partial: 'edit_content' %> 
  </div>

  <div class="bg-blue-200 col-span-2 row-span-3 col-start-4 row-start-6">
     <%= calendar tasks: @tasks, attribute: :deadline do |day, tasks| %>
    <strong><%= day.day %></strong>
    <% tasks.each do |task| %>
      <p><%= link_to task.category, task %></p>
    <% end %>
  <% end %>
  </div>

  <div class="bg-amber-300 col-span-2 row-span-2 col-start-4 row-start-4">
     <%= render partial: 'reminder/reminders', locals: { reminders_due_today: @reminders_due_today, reminders_within_week: @reminders_within_week } %>
  </div>
</div>
