<%= form_with(model: task, url: tasks_path, method: :post, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :category, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= form.select :category, Task::CATEGORIES, { prompt: 'Select a category' }, class: 'form-select' %>
  </div>

  <%= form.label :task, class: 'block text-gray-700 text-sm font-bold mb-2' %>
  <%= form.text_field :task, class: 'form-input' %>

  <%= form.label :deadline, class: 'block text-gray-700 text-sm font-bold mb-2' %>
  <%= form.date_field :deadline, class: 'form-input' %>

  <%= form.label :description, class: 'block text-gray-700 text-sm font-bold mb-2' %>
  <%= form.text_area :description, class: 'form-textarea' %>

  <%= form.submit 'Create Task', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
<% end %>
